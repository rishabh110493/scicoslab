#!/bin/sh 
# Scilab Makefile to MSVC .mak
echo "#-----------------------------" > $1.mak 
echo "# generated from Makefile: DO NOT EDIT" >> $1.mak 
echo "# -----------------------------" >> $1.mak 
sed -e "s/\.a *$/.lib/" -e "s/\.o/.obj/g" \
    -e "s/Makefile\.incl/Makefile.incl.mak/" \
    -e "s/Make\.lib/Make.lib.mak/" \
    -e "s/all:: Makefile\.mak.*$//" \
    -e "s/Make.banier/Make.banier.mak/" \
    -e "s/Make.Blocks/Make.Blocks.mak/" \
    -e "s/#mak//g" $1 >> $1.mak




